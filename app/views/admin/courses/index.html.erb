<% provide(:title, 'Courses') %>
<p><%= link_to "Create New Course", new_admin_course_path, class: "btn" %></p>
<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @courses.each do |course| %>
    <tr>
      <td><%= link_to course.name, admin_course_path(course) %></td>
      <td><%= link_to " ", edit_admin_course_path(course), class: "glyphicon glyphicon-pencil" %><td>
      <td><%= link_to " ", admin_course_path(course),
          method: :delete, data: {confirm: "You sure?"}, class: "glyphicon glyphicon-trash" %></td>
    </tr>
  <% end %>
</table>