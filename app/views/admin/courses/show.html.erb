<%= link_to "Back", admin_courses_path, class: "glyphicon glyphicon-circle-arrow-left" %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul style="text-align: center; font-size: 24px"y >
      <strong>Name:</strong>
      <%= @course.name %><span>
      <%= link_to " ", edit_admin_course_path, class: "glyphicon glyphicon-pencil" %> 
      <%= link_to " ", admin_course_path(@course),
          method: :delete, data: {confirm: "You sure?"}, class: "glyphicon glyphicon-trash" %></span>
          (<%= @course.time %>s)
    </ul>  
    <ol>
      <% @course.questions.each do |question| %>
        <li><%= h question.content %></li>
        <% question.options.each do |option| %>
          <ul class = "option-fields">
            <% if option.correct? %>
              <li><%= h option.content %>
              <span class= "glyphicon glyphicon-ok" ></span></li>
            <% else %>
              <li><%= h option.content %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>